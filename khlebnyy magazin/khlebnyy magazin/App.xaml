<Application x:Class="khlebnyy_magazin.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:khlebnyy_magazin"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="StandartBatan">
            <Setter Property="Background" Value="#FAD05B" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="20" />
        </Style>
        <Style TargetType="TextBlock" x:Key="TextHeder">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FontFamily" Value="Italic" />
        </Style>
        <Style TargetType="TextBlock" x:Key="AddProductTextBlock">
            <Setter Property="Width" Value="85" />
        </Style>
        <Style TargetType="TextBox" x:Key="AddProductTextBox">
            <Setter Property="Width" Value="120" />
        </Style>
    </Application.Resources>
</Application>
